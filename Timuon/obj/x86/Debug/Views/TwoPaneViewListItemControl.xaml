<UserControl x:ConnectionId='1'
    x:Class="Timuon.Views.TwoPaneViewListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Timuon.Converters"
    xmlns:stateTriggers="using:Timuon.StateTriggers"
    mc:Ignorable="d"
    Height="60"
    d:DesignHeight="80"
    d:DesignWidth="400">
    <UserControl.Resources>
        <converters:DateTimeFormatConverter x:ConnectionId='2' x:Name="dateTimeFormatConverter" />
    </UserControl.Resources>
    <Grid x:ConnectionId='3' x:Name="mainGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <stateTriggers:ControlSizeTrigger x:ConnectionId='4' MinWidth="480"                                        />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="extendedItemPanel.Visibility" Value="Visible" />
                        <Setter Target="shortItemPanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <FontIcon x:ConnectionId='5'
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="32"
                                                      />

        <Grid Grid.Column="1" Width="1000"/>

        <StackPanel x:ConnectionId='6'
            x:Name="shortItemPanel"
            Grid.Column="1"
            Margin="{StaticResource SmallLeftMargin}"
            VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource ListTitleStyle}" Text="Order ID:" />
                <TextBlock x:ConnectionId='13' Style="{StaticResource ListTitleStyle}"                                           Margin="{StaticResource XSmallLeftMargin}" />
            </StackPanel>
            <TextBlock x:ConnectionId='12' Style="{StaticResource ListSubTitleStyle}"                                          />
        </StackPanel>

        <StackPanel x:ConnectionId='7'
            x:Name="extendedItemPanel"
            Grid.Column="1"
            Margin="{StaticResource SmallLeftMargin}"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource ListTitleStyle}" Text="ID:"/>
                    <TextBlock x:ConnectionId='10' Style="{StaticResource ListTitleStyle}"                                           Margin="{StaticResource XSmallLeftMargin}" />
                    <TextBlock Style="{StaticResource ListTitleStyle}" Text="Status: " Margin="{StaticResource SmallLeftMargin}" />
                    <TextBlock x:ConnectionId='11' Style="{StaticResource ListTitleStyle}"                                          Margin="{StaticResource XSmallLeftMargin}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="{StaticResource XSmallLeftMargin}">
                    <TextBlock x:ConnectionId='9' Style="{StaticResource ListSubTitleStyle}"                                                                                                                                      />
                </StackPanel>
            </Grid>
            <Grid Width="680" />
            <TextBlock x:ConnectionId='8' Style="{StaticResource ListSubTitleStyle}"                                          />
        </StackPanel>
    </Grid>
</UserControl>

