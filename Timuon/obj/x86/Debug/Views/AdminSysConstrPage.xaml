<Page
    x:Class="Timuon.Views.AdminSysConstrPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Timuon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:Timuon.Behaviors"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Date" HorizontalAlignment="Right"/>
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Department" HorizontalAlignment="Right"/>
            </StackPanel>
            <!--<StackPanel Grid.Row="1" Grid.Column="0" Margin="40,40,40,40" VerticalAlignment="Top" HorizontalAlignment="Stretch" MinWidth="300" MaxWidth="400">-->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Auditoriums" Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Left" Margin="40,10,0,0"/>
            <ListView x:ConnectionId='3' x:Name="AuditoriumsList" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding DeptAuditoriums}"                           
                      SelectionMode="None" Margin="10">
                    <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" MinWidth="220" Padding="20,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <!--<RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>-->
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Name}" Style="{StaticResource SubtitleTextBlockStyle}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,2,0,2"/>
                            <!--<TextBlock Grid.Row="0" Text="{Binding Name}" Style="{StaticResource BaseTextBlockStyle}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,4,0,0"/>-->
                            <!--<TextBlock Grid.Row="1" Text="{Binding Capacity}" Style="{StaticResource BodyTextBlockStyle}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,4,0,0"/>-->
                            <TextBlock Grid.Row="1" Text="{Binding DisplayString}" Style="{StaticResource BodyTextBlockStyle}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,4,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                    <!--<ListView.Items>
                        <x:String>Hall 1</x:String>
                        <x:String>Hall 2</x:String>
                    </ListView.Items>-->
                </ListView>
            <!--</StackPanel>-->
            <!--<StackPanel Grid.Row="1" Grid.Column="2" Margin="40,40,40,40" VerticalAlignment="Top" MinWidth="300" MaxWidth="400" HorizontalAlignment="Stretch">-->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Student Requests"
                           Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Left" Margin="40,10,0,0"/>
            <ListView Grid.Row="2" Grid.Column="2" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Padding="10">
                                <TextBlock Text="{Binding}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,2,0,2"/>
                                <Button VerticalAlignment="Center" Content="Resolve" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Items>
                        <x:String>Request 1</x:String>
                        <x:String>Request 2</x:String>
                    </ListView.Items>
                </ListView>
            <!--</StackPanel>-->
            <!--<TextBlock Grid.Row="3" Grid.Column="0" Text="Edit Auditoriums" Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Left" Margin="40,10,0,0"/>-->
            <!--<Grid Grid.Row="4" Grid.Column="0" >
                
            </Grid>-->
            <Pivot Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Left"
                   Margin="30,10,0,0" MaxWidth="450">
                <PivotItem Header="Edit Auditorium">
                    <Grid MaxWidth="300" VerticalAlignment="Stretch" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <ComboBox x:ConnectionId='10' x:Name="AuditoriumCombo" Grid.Row="0" ItemsSource="{Binding DeptAuditoriums}" DisplayMemberPath="Name"
                                                                          Header="Select an Auditorium" HorizontalAlignment="Left"  Margin="0,10,0,0"/>
                        <muxc:NumberBox x:ConnectionId='11' x:Name="EditCapacityBox" Grid.Row="1" Grid.Column="0" Header="Capacity" SpinButtonPlacementMode="Inline"
                        HorizontalAlignment="Left" MaxWidth="150" Margin="0,10,0,0"/>
                        <CheckBox x:ConnectionId='12' x:Name="EditAccessibilityBox" Grid.Row="2" Margin="0,10,0,0">Accessible to disabled attendees</CheckBox>
                        <CheckBox x:ConnectionId='13' x:Name="EditAvailabilityBox" Grid.Row="3" Margin="0,10,0,0">Available this semester</CheckBox>
                        <Button x:ConnectionId='14' x:Name="ApplyButton" Grid.Row="4" Content="Apply"                          
                                HorizontalAlignment="Left" Margin="10,10,0,0" Width="80"/>
                        <Button x:ConnectionId='15' x:Name="EditCancelButton" Grid.Row="4" Content="Cancel"                               
                                HorizontalAlignment="Right" Margin="0,10,10,0" Width="80"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Add New Auditorium">
                    <Grid MaxWidth="300" VerticalAlignment="Stretch" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBox x:ConnectionId='4' Grid.Row="0" Header="Name" x:Name="NewNameBox"
                         Margin="0,10,0,0" HorizontalAlignment="Left" MinWidth="130" MaxWidth="150" VerticalAlignment="Top"/>
                        <muxc:NumberBox x:ConnectionId='5' x:Name="NewCapacityBox" Grid.Row="1" Grid.Column="0" Header="Capacity" SpinButtonPlacementMode="Inline"
                        HorizontalAlignment="Left" MinWidth="120" MaxWidth="150" Margin="0,10,0,0"/>
                        <CheckBox x:ConnectionId='6' x:Name="NewAccessibilityBox" Grid.Row="2" Margin="0,10,0,0">Accessible to disabled attendees</CheckBox>
                        <CheckBox x:ConnectionId='7' x:Name="NewAvailabilittyBox" Grid.Row="3" Margin="0,10,0,0">Available this semester</CheckBox>
                        <Button x:ConnectionId='8' x:Name="AddButton" Grid.Row="4" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" Width="80"/>
                        <Button x:ConnectionId='9' x:Name="NewCancelButton" Grid.Row="4" Content="Cancel" HorizontalAlignment="Right" Margin="0,10,10,0" Width="80"/>
                    </Grid>
                </PivotItem>
            </Pivot>
            
            <TextBlock Grid.Row="3" Grid.Column="2" Text="Resolve Requests" Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Left" Margin="40,10,0,0"/>
        </Grid>
    </Grid>
</Page>

