<Page
    x:Class="Timuon.Views.AdminHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Timuon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:Timuon.Behaviors"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5.5*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Date" HorizontalAlignment="Right"/>
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Department" HorizontalAlignment="Right"/>
            </StackPanel>
            <CalendarView Grid.Row="1" Grid.Column="0" Margin="60,20,60,20" 
                          MaxHeight="490" MaxWidth="490" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                SelectionMode="Single"
                IsOutOfScopeEnabled="True"
                Language="en"
                CalendarIdentifier="GregorianCalendar" />
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="40,40,40,20"
                        VerticalAlignment="Top" HorizontalAlignment="Stretch" MaxWidth="500">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Events"/>
                <ListView x:ConnectionId='11' x:Name="EventsList" ItemsSource="EventsToday" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch" MinWidth="220" Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding DisplayString}"
                                           Style="{StaticResource BaseTextBlockStyle}" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="1" Text="{Binding Description}"
                                           Style="{StaticResource CaptionTextBlockStyle}" Margin="0,4,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleTextBlockStyle}" Text="New Event"
                           Margin="20,0,0,10" HorizontalAlignment="Left"/>
                <TextBox x:ConnectionId='3' Grid.Row="1" Grid.Column="0" Header="Name" x:Name="NameBox"
                         Margin="0,0,10,20" HorizontalAlignment="Stretch" MaxWidth="350" VerticalAlignment="Top"/>
                <TextBox x:ConnectionId='4' Grid.Row="2" Grid.Column="0" Header="Description" x:Name="DescriptionBox"
                        AutomationProperties.Name="multi-line TextBox" TextWrapping="Wrap" Margin="0,0,10,20"
                         MaxWidth="350" VerticalAlignment="Top"/>
                <DatePicker x:ConnectionId='5' Grid.Row="3" Grid.Column="0" Header="Date" x:Name="EventDatePicker"
                            Margin="0,0,10,0" HorizontalAlignment="Stretch" MaxWidth="350" VerticalAlignment="Top"/>
                <CheckBox x:ConnectionId='6' Grid.Row="1" Grid.Column="1" Content="All-Day Event" x:Name="AllDayCheckBox"
                                                                                               
                        Margin="10,10,0,20" HorizontalAlignment="Stretch" MaxWidth="350" VerticalAlignment="Center" />
                <TimePicker x:ConnectionId='7' Grid.Row="2" Grid.Column="1" ClockIdentifier="24HourClock" Header="Start Time" x:Name="StartTimePicker"
                            MinuteIncrement="5" Margin="10,0,10,20" HorizontalAlignment="Stretch" MaxWidth="350" VerticalAlignment="Top"/>
                <TimePicker x:ConnectionId='8' Grid.Row="3" Grid.Column="1" ClockIdentifier="24HourClock" Header="End Time" x:Name="EndTimePicker"
                            MinuteIncrement="5" Margin="10,0,10,20" HorizontalAlignment="Stretch" MaxWidth="350" VerticalAlignment="Top" />
                <ComboBox x:ConnectionId='9' Grid.Row="1" Grid.Column="2" Header="Notify Users" PlaceholderText="Choose a category" x:Name="RecipientsCombo"
                          Margin="10,0,10,20" HorizontalAlignment="Stretch" MaxWidth="200" VerticalAlignment="Top">
                    <x:String>Do Not Notify</x:String>
                    <x:String>Secretary</x:String>
                    <x:String>All Staff</x:String>
                    <x:String>All Staff and Students</x:String>
                </ComboBox>
                <Button x:ConnectionId='10' Grid.Row="3" Grid.Column="2" Content="Create Event"                          
                        Margin="10,20,10,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
            </Grid>
        </Grid>
    </Grid>
</Page>

