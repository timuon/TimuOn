<Page
    x:Class="Timuon.Views.ScheduleStudentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:Timuon.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="24,0,63,10">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" Margin="-25,10,-59,0">
            <TextBlock HorizontalAlignment="Left" Height="26" Margin="51,105,0,0" Text="Choose a date" TextWrapping="Wrap" VerticalAlignment="Top" Width="415" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Height="21" Margin="284,371,0,0" Text="Does your schedule suit your needs?" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" RenderTransformOrigin="0.495,-0.48"/>
            <!--
                The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.
            -->
            <Line
                X1="51" Y1="140"
                X2="200" Y2="140"
                Stroke="Black"
                StrokeThickness="2" Margin="0,0,0,2" />
            <Line
                X1="270" Y1="140"
                X2="600  " Y2="140"
                Stroke="Black"
                StrokeThickness="2" Margin="0,0,0,2" />
            <Line
                X1="280" Y1="400"
                X2="500  " Y2="400"
                Stroke="Black"
                StrokeThickness="2" Margin="0,0,0,2" />
            <Line
                X1="720" Y1="140"
                X2="1100  " Y2="140"
                Stroke="Black"
                StrokeThickness="2" Margin="0,0,0,2" />
            <CheckBox Content="Yes" Margin="284,424,0,0" VerticalAlignment="Top"/>
            <CheckBox Content="No" Margin="444,420,0,0" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="44,45,0,0" Text="Hello Lampros!" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Margin="986,47,0,0" Text="Wednesday, 18 March 2021" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="986,71,0,0" Text="University of Patras, Computer Engineering and Informatics" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9"/>
            <TextBlock HorizontalAlignment="Left" Margin="271,161,0,0" Text="Scientific Computing" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="271,253,0,0" Text="Thesis Meeting" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="271,201,0,0" Text="BA - Gallopoulos Eustratios" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" FontSize="9"/>
            <TextBlock HorizontalAlignment="Left" Margin="274,297,0,0" Text="Office - Makris Christos" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9"/>
            <CalendarDatePicker Margin="44,161,0,0" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="284,108,0,0" Text="Your schedule for Wednesday, 18 March 2021" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Margin="504,161,0,0" Text="10.00-12.00" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="504,255,0,0" Text="12.15-12.45" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <ComboBox Margin="284,509,0,0" Header="Choose an event" PlaceholderText="Events" Width="120">
                <x:String>Scientific Computing</x:String>
                <x:String>Thesis Meeting</x:String>
            </ComboBox>
            <ComboBox Margin="284,609,0,0" Header="Choose an hour" PlaceholderText="Hour"  Width="120">
                <x:String>13.00-13.30</x:String>
                <x:String>13.30-14.00</x:String>
                <x:String>17.00-17.30</x:String>
            </ComboBox>
            <TextBlock HorizontalAlignment="Left" Margin="725,109,0,0" Text="Do you want to schedule an appointment with an other user?" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <CheckBox Content="Yes" Margin="725,161,0,0" VerticalAlignment="Top"/>
            <CheckBox Content="No" Margin="1033,159,0,0" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="726,287,0,0" Text="Reason for changing the time period" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="726,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="226"/>
            <Button Content="Submit" Margin="0,632,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.561,-0.799" HorizontalAlignment="Center" Width="119"/>
        </Grid>
    </Grid>
</Page>

