<Page x:ConnectionId='1'
    x:Class="Timuon.Views.TwoPaneViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:model="using:Timuon.Core.Models"
    xmlns:views="using:Timuon.Views"
    xmlns:toolkitConverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:converters="using:Timuon.Converters"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:Timuon.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">
    <Page.Resources>
        <toolkitConverters:BoolToVisibilityConverter x:ConnectionId='2' x:Name="ReverseBoolToVisibility" TrueValue="Collapsed" FalseValue="Visible" />
        <converters:DateTimeFormatConverter x:ConnectionId='3' x:Name="dateTimeFormatConverter" />
    </Page.Resources>

    <Grid x:ConnectionId='4' x:Name="ContentArea">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--641 is the default CompactModeThresholdWidth in NavigationView -->
                        <AdaptiveTrigger MinWindowWidth="641" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="titleTextBlock.Margin" Value="{StaticResource SmallLeftMargin}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <winui:TwoPaneView x:ConnectionId='5'
            x:Name="twoPaneView"
            Pane1Length="320"
            Pane2Length="*"
                                                                          
            MinWideModeWidth="772"
            WideModeConfiguration="LeftRight"
            TallModeConfiguration="SinglePane"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="ModeChanged">
                    <ic:InvokeCommandAction x:ConnectionId='6'                                                 />
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>
            <winui:TwoPaneView.Pane1>
                <Grid Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock x:ConnectionId='7'
                        x:Name="titleTextBlock"
                        x:Uid="TwoPaneViewTitle"
                        VerticalAlignment="Center"
                        Margin="96,0,0,0"
                        Style="{StaticResource ListTitleStyle}" />
                    <ListView x:ConnectionId='8'
                        Grid.Row="1"
                        IsItemClickEnabled="True"
                                                                    
                                                                               >
                        <i:Interaction.Behaviors>
                            <ic:EventTriggerBehavior EventName="ItemClick">
                                <ic:InvokeCommandAction x:ConnectionId='9'                                               />
                            </ic:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                        <ListView.ItemTemplate>
                            <DataTemplate                               >
                                <views:TwoPaneViewListItemControl Item="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </winui:TwoPaneView.Pane1>
            <winui:TwoPaneView.Pane2>
                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <views:TwoPaneViewDetailControl x:ConnectionId='12'                                                         />
                </Grid>
            </winui:TwoPaneView.Pane2>
        </winui:TwoPaneView>
    </Grid>
</Page>

